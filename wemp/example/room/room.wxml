<view class="page">
    <view class="weui-cells weui-cells_after-title">
        <block wx:for="{{list}}" wx:key="{{index}}">
            <navigator url="{{item.url}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="/image/{{item.ico}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">{{item.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{item.number}}</view>
            </navigator>
        </block>
    </view>
</view>